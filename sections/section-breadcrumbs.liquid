{% if section.settings.select_style_bread == 'style_1' %}
  <div class="wrap-bread-crumb breadcrumb_collection style1">
    <div
      class="text-center bg_bread "
      {% if section.settings.ena_bg_img %}
        style="background-image : url({% if section.settings.bg_breadcrumb != blank  %}{{section.settings.bg_breadcrumb | img_url : 'master'}} {% else %}//via.placeholder.com/1920x300 {% endif %}); background-position : center; background-size: cover"
      {% else %}
        style="background-color : {{section.settings.bg_color_breadcrumb}}"
      {% endif %}
    >
      <div class="title-page">
        <h2 class="">{{ collection.title }}</h2>
      </div>
      {% include 'breadcrumb' %}
    </div>
  </div>
