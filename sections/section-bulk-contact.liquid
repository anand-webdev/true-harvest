<div
  data-section-id="{{ section.id }}"
  style="background-color: {{section.settings.bg_color}}; margin-top: {{section.settings.margin_top}}; margin-bottom: {{section.settings.margin_bottom}}"
  class="bulk-contact "
>
  <div class="container container-v2 bulk-contact-wrapper">
    <div class="bulk-contact-content">
      <h2>{{ section.settings.header_text }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>
    <a href="/pages/contact">
      <button class="rounded-button-light">
        {{ section.settings.btn_text }}
      </button>
    </a>
  </div>
</div>

{% stylesheet %}
  .bulk-contact {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }
  .bulk-contact-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .bulk-contact-content {
    color: white;
  }
  .bulk-contact-content h2 {
    font-size: 1.3rem;
    font-weight: 500;
  }
  .bulk-contact-content p {
    margin-bottom: 0;
    font-weight: light;
  }

  @media (max-width: 767px) {
    .bulk-contact-wrapper {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "BRAND V1",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description Text"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Get in touch"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Bg Color",
      "default": "#00786c"
    }
  ],
  "presets": [
    {
      "name": "Bulk Contact",
      "settings": {
        "header_text": "Looking to buy in bulk?",
        "description": "Our wholesale team is available and will assist you during the process"
      }
    }
  ]
}
{% endschema %}
