<div
  data-section-id="{{ section.id }}"
  style="background-color: {{ section.settings.bg_color }}; margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px"
  class="bulk-contact"
>
  <div
    class="container container-v2 bulk-contact-wrapper"
    style="align-items: {{ section.settings.content_align }}; flex-direction: column; text-align: {{ section.settings.header_align }};"
  >
    <div class="bulk-contact-content" style="text-align: {{ section.settings.header_align }};">
      <h2>{{ section.settings.header_text }}</h2>
      <p style="text-align: {{ section.settings.description_align }};">{{ section.settings.description }}</p>
    </div>
    <div style="text-align: {{ section.settings.button_align }}; width: 100%;">
      <a href="{{ section.settings.button_link }}">
        <button class="rounded-button-light" style="border-radius: {{ section.settings.button_radius }}px;">
          {{ section.settings.btn_text }}
        </button>
      </a>
    </div>
  </div>
</div>

{% stylesheet %}
  .bulk-contact {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  .bulk-contact-wrapper {
    display: flex;
    gap: 1rem;
  }

  .bulk-contact-content {
    color: white;
  }

  .bulk-contact-content h2 {
    font-size: 1.3rem;
    font-weight: 500;
  }

  .bulk-contact-content p {
    margin-bottom: 0;
    font-weight: 300;
  }

  @media (max-width: 767px) {
    .bulk-contact-wrapper {
      flex-direction: column !important;
      gap: 1.5rem;
      align-items: flex-start;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "BRAND V1",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text"
    },
    {
      "type": "select",
      "id": "header_align",
      "label": "Header Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description Text"
    },
    {
      "type": "select",
      "id": "description_align",
      "label": "Description Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Get in touch"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Button Border Radius (px)",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 25
    },
    {
      "type": "select",
      "id": "button_align",
      "label": "Button Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "content_align",
      "label": "Overall Content Alignment",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Bg Color",
      "default": "#00786c"
    }
  ],
  "presets": [
    {
      "name": "Bulk Contact",
      "settings": {
        "header_text": "Looking to buy in bulk?",
        "description": "Our wholesale team is available and will assist you during the process",
        "btn_text": "Get in touch",
        "button_radius": 25,
        "button_align": "left",
        "header_align": "left",
        "description_align": "left",
        "content_align": "flex-start"
      }
    }
  ]
}
{% endschema %}